# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.rb]
indent_style = space
indent_size = 2

[*.slim]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[{Gemfile}]
indent_style = space
indent_size = 2
